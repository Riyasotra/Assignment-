#include <stdio.h>

int is_perfect(int num) {
    int sum = 1;
    for(int i = 2; i * i <= num; i++) {
        if(num % i == 0) {
            if(i * i != num)
                sum = sum + i + num / i;
            else
                sum = sum + i;
        }
    }
    return sum == num && num != 1;
}

int main() {
    int count = 0;
    printf("The three-digit perfect numbers are:\n");
    for(int num = 100; num <= 999; num++) {
        if(is_perfect(num)) {
            printf("%d\n", num);
            count++;
        }
    }
    if(count == 0) {
        printf("No perfect numbers found.\n");
    }
    return 0;
}
